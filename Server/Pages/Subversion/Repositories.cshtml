@page 
@model Server.Pages.SubversionModel
@{
    ViewData["Title"] = "Subversion repositories list";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<br />



<table border="1" bordercolor="red" cellpadding="5">
    <caption>Repositories</caption>
    <tr>
        <th>Path</th>
        <th>Is repository</th>
    </tr>
    @{
  
        foreach (var repo in Model.Data) {
            <tr>
                <td>
                    <a class="page-link" href="/Subversion/RepositoryBrowser/@repo" >@repo</a>
                </td>
                <td>@((Model.Subversion as SubvilleApiImpl).Subversion.IsRepository(repo))</td>
            </tr>
        }
    }
</table>



<div>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-page="/Subversion/Repositories">First</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-page="/Subversion/Repositories" asp-route-currentpage="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }
        

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a asp-page="/Subversion/Repositories" asp-route-currentpage="@i" class="page-link">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-page="/Subversion/Repositories" asp-route-currentpage="@(Model.CurrentPage + 1)">Next</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-page="/Subversion/Repositories" asp-route-currentpage="@(Model.TotalPages)">Last</a>
            </li>
        }
    </ul>
</div>