@page 
@model Server.Pages.Subversion.RepositoriesModel
@{
    ViewData["Title"] = "Subversion repositories list";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div>
<h1>@ViewData["Title"]</h1>


<div style="overflow:auto;">
  
    <div class="float-right">
        <a asp-page="/Subversion/CreateRepository">
    <button type="button" ID="Button1" class="btn  btn-success" title="Checkout" >
        @Model.Icons.GetIconHtml("download-16")
        New
    </button>
    </a>

    </div>

</div>


<div>
<table border="1" bordercolor="red" cellpadding="5">
    <caption>Repositories</caption>
    <tr>
        <th>Path</th>
        <th>Is repository</th>
    </tr>
    @{
  
        foreach (var repo in Model.Data) {
            <tr>
                <td>
                    <a href="/Subversion/RepositoryBrowser/@repo" >@repo</a>
                </td>
                <td>@((Model.Subversion as SubvilleApiImpl).Subversion.IsRepository(repo))</td>
            </tr>
        }
    }
</table>



<div>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-page="/Subversion/Repositories">First</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-page="/Subversion/Repositories" asp-route-currentpage="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }
        

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a asp-page="/Subversion/Repositories" asp-route-currentpage="@i" class="page-link">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-page="/Subversion/Repositories" asp-route-currentpage="@(Model.CurrentPage + 1)">Next</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-page="/Subversion/Repositories" asp-route-currentpage="@(Model.TotalPages)">Last</a>
            </li>
        }
    </ul>
</div>
</div>
